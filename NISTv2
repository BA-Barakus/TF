# Funkcja do tworzenia tabeli w dokumencie
def create_table(doc, data):
    for item in data:
        table = doc.add_table(rows=1, cols=2)
        table.style = 'Table Grid'
        hdr_cells = table.rows[0].cells
        hdr_cells[0].text = 'EN'
        hdr_cells[1].text = 'PL'
        
        row_cells = table.add_row().cells
        row_cells[0].text = item['EN']
        row_cells[1].text = item['PL']
        
        if 'subitems' in item:
            create_table(doc, item['subitems'])
        
        doc.add_paragraph()  # Dodajemy odstęp po każdej tabeli

# Tworzenie tabel w dokumencie
create_table(doc, data)

# Zapisanie dokumentu
file_path = "/mnt/data/Cybersecurity_Framework_Bilingual_Tables.docx"
doc.save(file_path)

